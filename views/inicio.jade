extends ./navegacion.jade
block contenido 
    body(onload='ordenarTabla()')
        link(rel='stylesheet', type='text/css', href='css/filtro-tabla.css')
        .container-fluid
            .row
                .col-md-6
                    h3.title.text-center ORGANIZADOR DE HORARIOS PARA LA FACULTAD DE CIENCIA Y TECNOLOGIA (FCYT) DE LA UMSS
                    input#barraBusqueda(type='text', onkeyup='filtro()', placeholder='Buscar Materia...')
                    table#tablaCarreras
                            tr.header
                                th#nombreCarrera.text-center Nombre de Carrera
                                th#codigoCarrera.text-center Codigo de Carrera
                                for Carrera in carrera
                                    tr(class='#{Carrera.codigo}')  
                                        td.text-center
                                            a(href='/carrera?carrera=' + '#{Carrera.id}')  #{Carrera.nombre} 
                                        td.text-center #{Carrera.codigo}
                    script(src="js/filtro-carrera.js")
                        


                    